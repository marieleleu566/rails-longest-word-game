<div class='container'>
  <h1>New Game</h1>
<div>
  <% @letters.each do |letter| %>
  <span class="letter btn btn-primary"><%=letter%></span>
  <% end %>
</div>
<div class="letter-form my-3">
  <div>What is the longest word you can find?</div>
  <form action="/score" method="post">
    <input type="text" name="games" placeholder="Enter a word">
    <input type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
</div>

